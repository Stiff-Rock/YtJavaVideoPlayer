<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="800" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stiffrock.AppController">
    <Label layoutX="315.0" layoutY="46.0" text="Video Player" underline="true">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    <TextField fx:id="tfUrl" layoutX="125.0" layoutY="95.0" maxHeight="25.0" prefHeight="24.0" prefWidth="551.0"
               promptText="Youtube Url..."/>
    <Button fx:id="btnLoad" onAction="#load" layoutX="684.0" layoutY="95.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="34.0" text="Load"/>
    <StackPane id="mediaViewPanel" layoutX="78.0" layoutY="146.0" prefHeight="360" prefWidth="640">
        <MediaView fx:id="mediaView" fitHeight="360" fitWidth="640"/>
    </StackPane>
    <HBox id="buttonsPanel" alignment="CENTER" layoutX="296.0" layoutY="530.0" prefHeight="24.0" prefWidth="208.0"
          spacing="10">
        <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#play">
            <graphic>
                <ImageView>
                    <Image url="@media/play.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnPause" mnemonicParsing="false" onAction="#pause">
            <graphic>
                <ImageView>
                    <Image url="@media/pause.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnStop" mnemonicParsing="false" onAction="#stop">
            <graphic>
                <ImageView>
                    <Image url="@media/stop.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnNext" mnemonicParsing="false" onAction="#next">
            <graphic>
                <ImageView>
                    <Image url="@media/next.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</AnchorPane>
